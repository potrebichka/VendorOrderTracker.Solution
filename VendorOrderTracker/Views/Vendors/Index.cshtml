  
@{
    Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<div class="box2">
    <h1>Vendors</h1>

    @if (@Model.Count == 0)
    {
        <h3>No vendors have been added yet!</h3>
    } 
    <ul>
        @foreach (Vendor vendor in Model)
        {
            <li><h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3></li>
        }
    </ul>

    <button type="button" class="btn" onclick="window.location.href = '/vendors/new'">Add a new vendor</button>
    <button type="button" class="btn" onclick="window.location.href = '/vendors/delete'">Delete all vendors</button>
    <br>
    <button type="button" class="btn" onclick="window.location.href = '/'">Home</button>
</div>