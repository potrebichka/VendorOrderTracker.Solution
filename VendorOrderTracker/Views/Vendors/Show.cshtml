@using VendorOrderTracker.Models;
@{
    Layout = "_Layout";
}

@if (Model["vendor"] == null)
{
    <h3>The vendor was deleted</h3>
}
else
{
    <h3>Title of Vendor: @Model["vendor"].Name</h3>
    <h3>Description of Vendor: @Model["vendor"].Description</h3>

    <h3><a href='/vendors/@Model["vendor"].Id/orders'>Orders of this vendor</a> </h3>

    <p><a href='/vendors/@Model["vendor"].Id/edit'>Edit vendor info</a></p>
    <p><a href='/vendors/@Model["vendor"].Id/delete'>Delete vendor</a></p>
}

<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>