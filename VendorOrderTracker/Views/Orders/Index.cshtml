@using VendorOrderTracker.Models;
@{
    Layout = "_Layout";
}

<div class="box2">
    @if(Model["orders"] == null)
    {
        <h3>Orders have been deleted!</h3>
    }
    else if(Model["orders"].Count == 0)
    {
        <h3>No orders have been added yet!</h3>
    }
    else
    {
        <h3>Here are all the orders of vendor @Model["vendor"].Name:</h3>
        <ol>
        @foreach (Order order in @Model["orders"])
        {
            <li><h3><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></h3></li>
        }
        </ol>
    }

    <button type="button" class="btn" onclick="window.location.href = '/vendors/@Model["vendor"].Id/orders/new'">Add a new order</button>
    <button type="button" class="btn" onclick="window.location.href = '/vendors/@Model["vendor"].Id/orders/delete'">Delete all orders</button>
    <button type="button" class="btn" onclick="window.location.href = '/vendors/@Model["vendor"].Id'">Back to vendor</button>
    <button type="button" class="btn" onclick="window.location.href = '/vendors'">Back to vendors</button>
    <button type="button" class="btn" onclick="window.location.href = '/'">Home</button>
</div>
